{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    <div class="row justify-content-lg-center">
        <div class="col-12 col-lg-8">
            <a href="{{ path('admin_edit_project', {'project': project.id}) }}" class="btn btn-success" role="button"><i class="fa-solid fa-arrow-left"></i></a>
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Location</th>
                        <th scope="col">Text</th>
                        <th scope="col">Type</th>
                        <th scope="col">Points</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                {% for question in questions %}
                    <tr>
                        <th scope="row">{{ question.id }}</th>
                        <td>{{ question.location.name|default }}</td>
                        <td>{{ question.location.coordinate|default }}</td>
                        <td>{{ question.text|default }}</td>
                        <td>{{ question.type|convert_question_type }}</td>
                        <td>{{ question.points|default }}</td>
                        <td class="table-align"><a href="{{ path('admin_question_edit', { 'project': project.id, 'question': question.id }) }}" class="btn btn-primary" role="button"><i class="fa-regular fa-pen-to-square"></i></a></td>
                        <td class="table-align"><a href="{{ path('admin_question_delete_confirm', { 'project': project.id, 'question': question.id }) }}" class="btn btn-danger" role="button"><i class="fa-regular fa-trash-can"></i></a></td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="5"></th>
                        <th colspan="3" class="table-align">Add question <a href="{{ path('admin_question_add', {'project': project.id}) }}" class="btn btn-primary" role="button"><i class="fa-solid fa-plus"></i></a></th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
{% endblock %}
