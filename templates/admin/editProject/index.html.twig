{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-3">
                Hoofd edit project pagina

                <p>Users in project:</p>
                <table class="table table-striped">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">Username</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in usersInProject %}
                        <tr>
                            <td>{{ user.username }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="col-xl-9">
                <p>Locations in project:</p>
                <a href="{{ path('admin_location_add', {'project': project.id }) }}" class="btn btn-primary"
                   role="button">Create</a>
                <table class="table table-striped">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">Coordinate</th>
                        <th scope="col">Device</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for location in locations %}
                        <tr>
                            <td>{{ location.coordinate }}</td>
                            <td>{{ location.device.name }}</td>
                            <td>
                                <a href="{{ path('admin_location_edit', {'project': project.id, 'location': location.id }) }}"
                                   class="btn btn-primary" role="button">Edit</a></td>
                            <td>
                                <a href="{{ path('admin_location_delete_confirm', {'project': project.id, 'location': location.id }) }}"
                                   class="btn btn-danger" role="button">Delete</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="col-xl-3">
                <table class="table table-striped">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">Questions</th>
                        <th scope="col"></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>Question: {{ questions|length }}</td>
                        <td><a href="{{ path('admin_question', {'project': project.id}) }}" class="btn btn-primary">Open</a></td>
                    </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
{% endblock %}
