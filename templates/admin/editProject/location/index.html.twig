{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    <div class="row justify-content-lg-center">
        <div class="col-12 col-lg-5">
            <p>Locations in project:</p>
            <a href="{{ path('admin_edit_project', {'project': project.id}) }}" class="btn btn-success" role="button"><i class="fa-solid fa-arrow-left"></i></a>

            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Coordinate</th>
                        <th scope="col">Device</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                {% for location in locations %}
                    <tr>
                        <td>{{ location.name|default }}</td>
                        <td>{{ location.coordinate|default }}</td>
                        <td>{{ location.device.name|default }}</td>
                        <td class="table-align">
                            <a href="{{ path('admin_location_edit', {'project': project.id, 'location': location.id }) }}"
                               class="btn btn-primary" role="button"><i class="fa-regular fa-pen-to-square"></i></a></td>
                        <td class="table-align">
                            <a href="{{ path('admin_location_delete_confirm', {'project': project.id, 'location': location.id }) }}"
                               class="btn btn-danger" role="button"><i class="fa-regular fa-trash-can"></i></a></td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="2"></th>
                        <th colspan="3" class="table-align">Add location <a href="{{ path('admin_location_add', {'project': project.id }) }}" class="btn btn-primary" role="button"><i class="fa-solid fa-plus"></i></a></th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
{% endblock %}
