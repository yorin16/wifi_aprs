{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    <a href="{{ path('admin_project_add') }}" class="btn btn-primary" role="button">Create</a>
    <div class="col-6">
        <table class="table table-striped">
            <thead class="thead-dark">
            <tr>
                {% for field in fields %}
                    <th scope="col">{{ field|capitalize }}</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                {% endfor %}
            </tr>
            </thead>
            <tbody>
            {% for project in projects %}
                <tr>
                    {% for field in fields %}
                        <td>{{ attribute(project, field) }}</td>
                    {% endfor %}
                    <td><a href="{{ path('admin_project_edit', {'id': project.id }) }}" class="btn btn-primary" role="button">Edit</a></td>
                    <td><a href="{{ path('admin_project_delete_confirm', {'id': project.id }) }}" class="btn btn-danger" role="button">Delete</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
