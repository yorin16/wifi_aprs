{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    <div class="row justify-content-lg-center">
        <div class="col-12 col-lg-5">
            <table class="table table-striped">
                <thead class="thead-dark">
                <tr>
                    {% for field in fields %}
                        <th scope="col">{{ field|capitalize }}</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    {% endfor %}
                </tr>
                </thead>
                <tbody>
                {% for project in projects %}
                    <tr>
                        {% for field in fields %}
                            <td>{{ attribute(project, field) }}</td>
                        {% endfor %}
                        <td class="table-align"><a href="{{ path('admin_project_edit', {'id': project.id }) }}" class="btn btn-primary" role="button"><i class="fa-regular fa-pen-to-square"></i></a></td>
                        <td class="table-align"><a href="{{ path('admin_project_delete_confirm', {'id': project.id }) }}" class="btn btn-danger" role="button"><i class="fa-regular fa-trash-can"></i></a></td>
                        <td class="table-align"><a href="{{ path('admin_edit_project', {'project': project.id }) }}" class="btn btn-success" role="button"><i class="fa-solid fa-arrow-right"></i></a></td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="1"></th>
                        <th colspan="3" class="table-align">Add project <a href="{{ path('admin_project_add') }}" class="btn btn-primary" role="button"><i class="fa-solid fa-plus"></i></a></th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
{% endblock %}
